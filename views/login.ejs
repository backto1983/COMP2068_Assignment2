<% include partials/header %>
<main class="center">
    <% if(messages.length > 0) { %>
        <div class="row" id="alert_box">
            <div class="col s6" style="margin-left: 25%">
                <div class="card red darken-1">
                    <div class="row">
                        <div class="col s8 m12">
                            <div class="card-content white-text"><%= messages.toString() %></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="row" id="info_box">
            <div class="col s6" style="margin-left: 25%">
                <div class="msg msg-info z-depth-3">
                    <div class="row">
                        <div class="col s8 m12">
                            <div class="card-content white-text">Please enter your credentials</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <h1><%= title %></h1>
    <form method="POST" class="container" style="margin-left: 30%; margin-right: 30%"> 
        <div class="row">
            <div class="input-field col s7" style="margin-bottom: 0">
                <label for="username">Username</label>
                <input type="email" id="username" name="username" required>               
            </div>
        </div>
        <div class="row">
            <div class="input-field col s7" style="margin-bottom: 0">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>                
            </div>
        </div>  
        <button type="submit" class="waves-effect waves-light btn-small black" style="margin-bottom: 20px; margin-right:43%">Login</a></button>   
        <br>
        <div style="margin-bottom: 20px; margin-right:43%">
            <a href="/google" class="btn-small red"><i class="fab fa-google-plus"></i></a>
            <a href="/microsoft" class="btn-small blue"><i class="fab fa-linkedin"></i></a>
        </div>
    </form>    
</main>
<% include partials/footer %>
